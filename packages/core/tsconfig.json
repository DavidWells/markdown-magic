{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "target": "ES2020",
    "module": "CommonJS"
  },
  "include": ["**/*.js", "**/*.ts"],
  "exclude": [
    "node_modules",
    "__tests/**",
    "_tests/**",
    "**/*.test.js",
    "**/*.bench.js",
    "test/**",
    "types"
  ]
} 