{
  "name": "markdown-magic",
  "version": "4.6.1",
  "description": "Automatically update markdown files with content from external sources",
  "main": "src/index.js",
  "bin": {
    "markdown": "./cli.js",
    "md-magic": "./cli.js",
    "mdm": "./cli.js"
  },
  "types": "types/index.d.ts",
  "files": [
    "README.md",
    "package.json",
    "package-lock.json",
    "src",
    "cli.js",
    "types"
  ],
  "scripts": {
    "types": "tsc --emitDeclarationOnly --outDir types",
    "docs": "node examples/generate-readme.js",
    "test": "uvu . '.test.([mc]js|[jt]sx?)$'",
    "cli": "node ./cli.js --path 'README.md' --config ./markdown.config.js",
    "bundle": "npm run bundle:all",
    "bundle:all": "npm run bundle:mac && npm run bundle:linux && npm run bundle:windows",
    "bundle:mac": "bun build ./cli.js --compile --minify --target=bun-darwin-arm64 --outfile dist/md-magic-darwin-arm64 && bun build ./cli.js --compile --minify --target=bun-darwin-x64 --outfile dist/md-magic-darwin-x64",
    "bundle:linux": "bun build ./cli.js --compile --minify --target=bun-linux-x64 --outfile dist/md-magic-linux-x64 && bun build ./cli.js --compile --minify --target=bun-linux-arm64 --outfile dist/md-magic-linux-arm64",
    "bundle:windows": "bun build ./cli.js --compile --minify --target=bun-windows-x64 --outfile dist/md-magic-windows-x64.exe",
    "postpublish": "git push origin && git push origin --tags",
    "release:patch": "pnpm version patch --git-tag-version && pnpm publish",
    "release:minor": "pnpm version minor --git-tag-version && pnpm publish",
    "release:major": "pnpm version major --git-tag-version && pnpm publish"
  },
  "author": "David Wells",
  "license": "MIT",
  "homepage": "https://github.com/DavidWells/markdown-magic#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/DavidWells/markdown-magic"
  },
  "dependencies": {
    "@davidwells/md-utils": "0.0.53",
    "color-convert": "^2.0.1",
    "comment-block-parser": "workspace:*",
    "comment-block-replacer": "workspace:*",
    "comment-block-transformer": "workspace:*",
    "globrex": "^0.1.2",
    "gray-matter": "^4.0.3",
    "is-glob": "^4.0.3",
    "is-local-path": "^0.1.6",
    "is-valid-path": "^0.1.1",
    "micro-mdx-parser": "^1.1.0",
    "module-alias": "^2.2.3",
    "mri": "^1.2.0",
    "node-fetch": "^2.7.0",
    "oparser": "^3.0.24",
    "punycode": "^2.3.1",
    "smart-glob": "^1.0.2",
    "string-width": "^4.2.3"
  },
  "devDependencies": {
    "concordance": "^5.0.1",
    "doxxx": "^2.0.7",
    "rimraf": "^3.0.2",
    "safe-chalk": "^1.0.0",
    "typescript": "^5.0.2",
    "uvu": "^0.5.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
